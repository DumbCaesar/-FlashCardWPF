<Window x:Class="FlashCardWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:FlashCardWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <StackPanel HorizontalAlignment="Center">
        <Border CornerRadius="25" BorderBrush="Black" BorderThickness="1" Background="White" Margin="10">
        <Grid VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Decks" Grid.Column="0" Margin="5" FontWeight="Bold" Background="White" BorderThickness="0"/>
                <Button Content="Add" Grid.Column="1" Margin="5" FontWeight="Bold" Background="White" BorderThickness="0"/>
                <Button Content="Browse" Grid.Column="2" Margin="5" FontWeight="Bold" Background="White" BorderThickness="0"/>
                <Button Content="Stats" Grid.Column="3" Margin="5" FontWeight="Bold" Background="White" BorderThickness="0"/>
                <Button Content="Sync" Grid.Column="4" Margin="5" FontWeight="Bold" Foreground="DodgerBlue" Background="White" BorderThickness="0"/>
        </Grid>
        </Border>
        <ListBox x:Name="DecksListBox" ItemsSource="{Binding Decks}"  Width="400" Height="200" SelectedItem="{Binding SelectedDeck, Mode=TwoWay}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding DeckDoubleClickCommand}"
                                           CommandParameter="{Binding SelectedDeck}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ListBox>
        <Label Content="Temp" HorizontalAlignment="Center" Margin="0 5 0 0"/>
        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Content="Get shared" Grid.Column="0" Margin="0 5 5 0"/>
            <Button Content="Create Deck" Grid.Column="1" Margin="5 5 5 0"/>
            <Button Content="Import File" Grid.Column="2" Margin="5 5 0 0"/>
        </Grid>
    </StackPanel>
</Window>
